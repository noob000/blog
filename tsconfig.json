{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "useDefineForClassFields": true,
    "downlevelIteration":true,
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "lib": ["es2021", "DOM", "ES5", "ScriptHost"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/icon.tsx"]
}
